<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.baosystems.icrc.pharmacystockmanagement">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PharmacyStockManagement.NoActionBar">
        <activity
            android:name=".ManageStockActivity"
            android:exported="true" />
        <activity
            android:name=".views.activities.BaseActivity"
            android:parentActivityName=".views.activities.HomeActivity"
            android:exported="true">

            <!-- Add support for API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".views.activities.HomeActivity" />
        </activity>
        <activity
            android:name=".views.activities.HomeActivity"
            android:exported="true"
            android:label="@string/title_activity_home">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>